<Window x:Class="DnDCharacterCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDCharacterCreator"
        mc:Ignorable="d"
        Title="RPG Character Creator" Height="430" Width="608" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="btnStart" Content="Start" Margin="225,150,0,0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Click="btnStart_Click"/>
        <Button x:Name="btnExit" Content="Exit" Margin="225,205,0,0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Click="btnExit_Click"/>

    </Grid>
</Window>
